{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend (Nodemon)",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "restart": true,
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}